{
  "name": "my-module-a",
  "version": "0.0.1",
  "description": "My First Module",
  "keywords": [
    "pepr",
    "k8s",
    "policy-engine",
    "pepr-module",
    "security"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "pepr": {
    "name": "My Module A",
    "uuid": "my-module-a",
    "onError": "reject",
    "webhookTimeout": 10,
    "customLabels": {
      "namespace": {
        "pepr.dev": ""
      }
    },
    "alwaysIgnore": {
      "namespaces": []
    },
    "includedFiles": [],
    "env": {}
  },
  "scripts": {
    "ci": "npm run k3d-setup && npx jest",
    "k3d-setup": "k3d cluster delete pepr-dev && k3d cluster create pepr-dev --k3s-arg '--debug@server:0' --wait && kubectl rollout status deployment -n kube-system && npx pepr deploy --confirm"
  },
  "dependencies": {
    "pepr": "^0.46.2",
    "undici": "^7.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.6",
    "typescript": "^5.7.3"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "globalSetup": "./jest.setup.js",
    "globalTeardown": "./jest.teardown.js"
  }
}
